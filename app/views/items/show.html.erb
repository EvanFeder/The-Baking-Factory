<div class="row">
  <div class="small-7 columns">
    <%= render partial: "item_details" %>
    <% if logged_in? && current_user.role?(:customer) %>
      <%= link_to(add_to_cart_path(@item.id), class: 'waves-effect waves-light btn') do %>
        &nbsp; Add to Cart
      <% end %>
    <% end %>
  </div>
  <% if logged_in? && current_user.role?(:admin) %>
    <div class="col s4">
      <%= render partial: "price_history" %>
    </div>
  <% end %>
  <div class="col s4">
    <%= render partial: "partials/similar_items", locals: {similar_items: @similar_items}%>
  </div>
</div>


<!-- Add buttons to list all, edit project or destroy object -->
<%= render partial: "partials/object_options", locals: {model_name: "item", object: @item}  %>