<h3><%= @item.name %></h3>

<% if @item.picture_url.nil? %>
  <p><%= image_tag("default.jpg", width: "auto", height: "200") %></p>
<% else %>
    <p><%= image_tag(@item.picture_url, width: "auto", height: "200") %></p>
<% end %>

<p>
  <b>Description</b>: <%= @item.description %>
</p>

<p>
  <b>Price</b>: <%= number_to_currency @item.current_price %>
</p>

<p>
  <b>Category</b>: <%= @item.category %>
</p>

<p>
  <b>Units per Item</b>: <%= @item.units_per_item %>
</p>

<p>
  <b>Weight</b>: <%= "#{@item.weight} lbs" %>
</p>

<p>
  <b>Active</b>: <%= @item.active ? 'Yes' : 'No' %>
</p>

