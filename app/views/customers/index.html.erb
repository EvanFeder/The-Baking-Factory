<%= render :partial => "partials/title_with_search", locals: {title: "Customers"} %>                                                         
<div class="row">
  <div class="small-8 columns">
    <!-- primary partial gets displayed here in main div -->
    <%= render partial: "active_customers" %>
    <!-- sometimes we want another partial below -->
    <%= render partial: "inactive_customers" %>
  </div>
</div>

<% if can? :edit, eval("Customer") %>
  <!-- Add a button for new instances of object -->
  <%= link_to(eval("new_customer_path"), class: "button radius") do %>
    <!-- <i class="fa fa-plus"></i> -->
    &nbsp;Add a New Customer
  <% end %>
<% end %>
                                            